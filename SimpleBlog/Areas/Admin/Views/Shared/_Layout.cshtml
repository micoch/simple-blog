@using System.Web.Optimization

@helper SelectedTabClass(string tabName) { 
        if(ViewBag.SelectedTab == tabName)
        {
                @: active
        }
    }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SimpleBlog - Admin</title>
    @Styles.Render("~/admin/styles")
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.RouteLink("SimpleBlog", "home", null, htmlAttributes: new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav nav-pills">
                    <li class="@SelectedTabClass("post")">
                        @Html.ActionLink("Posts", "Index", "Post", new { area = "admin"}, new { })
                    </li>
                    <li class="@(ViewBag.SelectedTab == "users" ? "active" : "")">
                        @Html.ActionLink("Users", "Index", "Users", new { area = "admin" }, new { })
                    </li>
                    <li class="pull-right">
                        @Html.RouteLink("View Site", "home")
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="body-content">

        @RenderBody()


        <div class="container">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - SimpleBlog</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/admin/scripts")
    @RenderSection("Scripts", false)
</body>
</html>


