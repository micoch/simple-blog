@model SimpleBlog.ViewModel.AuthLogin
@{
    ViewBag.Title = "Login";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm(null, null, FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{
    <div class="container">
        <div class="row">
            <div class="form-style col-md-6 col-md-offset-3">

                <div class="form-group col-sm-12">
                    @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "control-label col-xs-2" })
                    <div class="col-xs-10">
                        @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    @Html.LabelFor(m => m.Password, htmlAttributes: new { @class= "control-label col-xs-2"})
                    <div class="col-xs-10">
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Login" class="btn btn-default " />
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    
}