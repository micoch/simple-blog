@model SimpleBlog.ViewModel.AuthLogin
@{
    ViewBag.Title = "Login";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
<div class="row">
    @using (Html.BeginForm(null, null, FormMethod.Post, htmlAttributes: new { @class = "form-horizontal col-sm-8" }))
    {


        <div class="form-style">

            <div class="form-group col-sm-12">
                @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "control-label col-xs-2" })
                <div class="col-xs-10">
                    @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group col-sm-12">
                @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-xs-2" })
                <div class="col-xs-10">
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group col-sm-12">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Login" class="btn btn-primary btn-block" />
                </div>
            </div>
        </div>
    }
        <div class="col-sm-4 login-message">
            <h1>sign in and...</h1>
            <h2>express yourself.</h2>
        </div>
    </div>
</div>



@section Scripts {
    
}